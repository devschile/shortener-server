{
  "name": "tupoto",
  "version": "0.0.9",
  "description": "tupo.to - acortador de URL's",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "nodemon",
    "functions:build": "netlify-lambda build functions",
    "prefunctions:serve": "npm run functions:build",
    "functions:serve": "netlify-lambda serve functions",
    "preserve": "npm run functions:build",
    "serve": "netlify-local serve",
    "lint": "eslint . --fix",
    "format": "prettier-standard '{src,functions}/**/*.js'"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devschile/tupoto.git"
  },
  "keywords": [
    "shorten",
    "devschile"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "contributors": [
    "Jorge Epu√±an <juanbrujo@gmail.com> (http://www.csslab.cl)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devschile/tupoto/issues"
  },
  "homepage": "https://github.com/devschile/tupoto#readme",
  "dependencies": {
    "body-parser": "1.18.3",
    "compression": "1.7.3",
    "config-dburi": "1.0.0",
    "dotenv": "6.1.0",
    "express": "4.16.4",
    "ioredis": "4.2.0",
    "morgan": "1.9.1",
    "raven": "2.6.4",
    "short-unique-id": "1.1.1",
    "winston": "3.1.0",
    "winston-sentry-raven-transport": "1.0.1"
  },
  "devDependencies": {
    "eslint": "5.8.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.1.2",
    "lint-staged": "7.3.0",
    "netlify-lambda": "1.0.2",
    "netlify-local": "1.3.0",
    "nodemon": "1.18.5",
    "prettier-standard": "8.0.1"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  }
}
