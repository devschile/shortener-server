{
  "name": "tupoto",
  "version": "0.0.9",
  "description": "tupo.to - acortador de URL's",
  "main": "src/main.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "vue:build": "vue-cli-service build",
    "build": "npm run functions:build && npm run vue:build",
    "lint": "eslint functions/**/*.js src/**/*.{js,vue} --fix",
    "mock": "json-server --watch mock/db.json",
    "functions:build": "netlify-lambda build functions",
    "prefunctions:serve": "npm run functions:build",
    "functions:serve": "netlify-lambda serve functions",
    "prenetlify-local": "npm run functions:build",
    "netlify-local": "netlify-local -n netlify-dev.toml serve",
    "vue:watch": "vue-cli-service build --watch --mode development",
    "server": "run-p vue:watch netlify-local",
    "format": "prettier-standard '{src,functions}/**/*.js'"
  },
  "engines": {
    "node": "12.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devschile/tupoto.git"
  },
  "keywords": [
    "shorten",
    "devschile"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "contributors": [
    "Jorge Epu√±an <juanbrujo@gmail.com> (http://www.csslab.cl)"
  ],
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/devschile/tupoto/issues"
  },
  "homepage": "https://github.com/devschile/tupoto#readme",
  "dependencies": {
    "@sentry/browser": "5.4.0",
    "@sentry/integrations": "5.4.1",
    "@sentry/node": "5.4.0",
    "axios": "0.19.0",
    "config-dburi": "1.0.0",
    "ioredis": "4.9.5",
    "short-unique-id": "1.1.1",
    "validator": "11.0.0",
    "vue": "2.6.10",
    "vue-router": "3.0.6",
    "winston": "3.2.1",
    "winston-sentry-node": "0.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@vue/cli-plugin-babel": "3.8.0",
    "@vue/cli-plugin-eslint": "3.8.0",
    "@vue/cli-service": "3.8.0",
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-jsdoc-strict": "2.0.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-array-func": "3.1.3",
    "eslint-plugin-eslint-comments": "3.1.1",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-jsdoc": "7.2.3",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.4.0",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-vue": "5.2.2",
    "husky": "2.3.0",
    "json-server": "0.15.0",
    "lint-staged": "8.1.7",
    "netlify-lambda": "1.4.13",
    "netlify-local": "1.8.2",
    "npm-run-all": "4.1.5",
    "prettier-standard": "9.1.1",
    "sass-loader": "7.1.0",
    "vue-template-compiler": "2.6.10"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "standard",
      "jsdoc-strict",
      "plugin:promise/recommended",
      "plugin:security/recommended",
      "plugin:eslint-comments/recommended",
      "plugin:array-func/all",
      "plugin:sonarjs/recommended"
    ],
    "plugins": [
      "promise",
      "security",
      "eslint-comments",
      "array-func",
      "sonarjs"
    ],
    "rules": {
      "no-console": "error",
      "require-await": "error"
    }
  },
  "eslintIgnore": [
    "build",
    "dist",
    "mock",
    "public"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 5%",
    "last 5 versions",
    "not ie <= 8"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "functions/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ],
      "src/**/*.{js,vue}": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-app",
      "docker:disable"
    ]
  }
}
