{
  "name": "tupoto",
  "version": "0.0.9",
  "description": "tupo.to - acortador de URL's",
  "main": "src/main.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "vue:build": "vue-cli-service build",
    "build": "npm run functions:build && npm run vue:build",
    "lint": "eslint functions/**/*.js src/**/*.{js,vue} --fix",
    "mock": "json-server --watch mock/db.json",
    "functions:build": "netlify-lambda build functions",
    "prefunctions:serve": "npm run functions:build",
    "functions:serve": "netlify-lambda serve functions",
    "prenetlify-local": "npm run functions:build",
    "netlify-local": "netlify-local -n netlify-dev.toml serve",
    "vue:watch": "vue-cli-service build --watch --mode development",
    "server": "run-p vue:watch netlify-local",
    "format": "prettier-standard '{src,functions}/**/*.js'"
  },
  "engines": {
    "node": "12.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devschile/tupoto.git"
  },
  "keywords": [
    "shorten",
    "devschile"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "contributors": [
    "Jorge Epu√±an <juanbrujo@gmail.com> (http://www.csslab.cl)"
  ],
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/devschile/tupoto/issues"
  },
  "homepage": "https://github.com/devschile/tupoto#readme",
  "dependencies": {
    "axios": "0.18.0",
    "config-dburi": "1.0.0",
    "ioredis": "4.2.0",
    "raven": "2.6.4",
    "short-unique-id": "1.1.1",
    "vue": "2.5.17",
    "vue-raven": "1.0.0",
    "vue-router": "3.0.1",
    "winston": "3.1.0",
    "winston-sentry-raven-transport": "1.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/prompt-cli": "7.2.1",
    "@vue/cli-plugin-babel": "3.1.1",
    "@vue/cli-plugin-eslint": "3.1.5",
    "@vue/cli-service": "3.1.4",
    "babel-eslint": "10.0.1",
    "eslint": "5.9.0",
    "eslint-config-jsdoc-strict": "1.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsdoc": "3.9.1",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-vue": "5.0.0-beta.4",
    "husky": "1.1.4",
    "json-server": "0.14.0",
    "lint-staged": "8.0.5",
    "netlify-lambda": "1.0.3",
    "netlify-local": "1.3.0",
    "npm-run-all": "4.1.3",
    "prettier-standard": "8.0.1",
    "sass-loader": "7.1.0",
    "vue-template-compiler": "2.5.17"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "standard",
      "jsdoc-strict",
      "plugin:security/recommended"
    ],
    "plugins": [
      "promise",
      "security"
    ],
    "rules": {
      "no-console": [
        "error"
      ],
      "require-await": [
        "error"
      ],
      "promise/always-return": "error",
      "promise/no-return-wrap": "error",
      "promise/param-names": "error",
      "promise/catch-or-return": "error",
      "promise/no-native": "off",
      "promise/no-nesting": "warn",
      "promise/no-promise-in-callback": "warn",
      "promise/no-callback-in-promise": "warn",
      "promise/no-new-statics": "error",
      "promise/no-return-in-finally": "warn",
      "promise/valid-params": "warn"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "eslintIgnore": [
    "build",
    "dist",
    "mock",
    "public"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 5%",
    "last 5 versions",
    "not ie <= 8"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,functions}/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-app",
      "docker:disable"
    ]
  }
}
