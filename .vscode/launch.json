    "version": "0.2.0",
    "configurations": [
        {
          "type": "chrome",
          "request": "launch",
          "name": "Lanzar Chromium contra localhost (Linux)",
          "url": "http://localhost:9000",
          "webRoot": "${workspaceRoot}/src",
          "runtimeExecutable": "/usr/bin/chromium",
          "runtimeArgs": [
            "--remote-debugging-port=9222"
          ],
          "sourceMaps": true
        },
        {
          "type": "chrome",
          "request": "launch",
          "name": "Lanzar Chromium contra localhost (osx)",
          "url": "http://localhost:9000",
          "webRoot": "${workspaceRoot}/src",
          "runtimeArgs": [
            "--remote-debugging-port=9222"
          ],
          "sourceMaps": true
        }
    ]
}
